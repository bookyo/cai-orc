# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cai-orc
# 或者使用 MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cai-orc

# GLM API Configuration
GLM_API_KEY=your_glm_api_key_here
GLM_OCR_API_URL=https://open.bigmodel.cn/api/paas/v4/layout_parsing
GLM_CHAT_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
# 使用随机生成: openssl rand -base64 32

# Admin User Configuration (初始化默认管理员)
ADMIN_PHONE=13800138000
ADMIN_PASSWORD=admin123456
ADMIN_NAME=系统管理员

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,application/pdf

# Storage Configuration
UPLOAD_DIR=./public/uploads
BASE_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Cache Configuration
CACHE_TTL_SECONDS=3600
